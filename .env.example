# ===========================================
# RFP Automator - Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# -------------------------------------------
# Clerk (Authentication & Organizations)
# -------------------------------------------
# Get these from https://clerk.com dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk sign-in/sign-up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# -------------------------------------------
# Database (Neon PostgreSQL)
# -------------------------------------------
# Get connection string from https://neon.tech console
# Use pooled connection for serverless functions
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# -------------------------------------------
# Vercel Blob (File Storage)
# -------------------------------------------
# Get from Vercel project settings > Storage > Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_...

# -------------------------------------------
# Vercel KV (Redis-compatible Cache)
# -------------------------------------------
# Get from Vercel project settings > Storage > KV
KV_REST_API_URL=https://xxx.kv.vercel-storage.com
KV_REST_API_TOKEN=xxx

# -------------------------------------------
# Inngest (Background Jobs)
# -------------------------------------------
# Get from https://inngest.com dashboard
INNGEST_EVENT_KEY=xxx
INNGEST_SIGNING_KEY=signkey-xxx

# -------------------------------------------
# OpenAI (Embeddings)
# -------------------------------------------
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# -------------------------------------------
# Anthropic (LLM - Optional Default)
# -------------------------------------------
# Get from https://console.anthropic.com
# Optional: tenants can configure their own keys
ANTHROPIC_API_KEY=sk-ant-...

# -------------------------------------------
# Application
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# Development Only
# -------------------------------------------
# Set to 'development' for local dev, 'production' for deployed
NODE_ENV=development
